# NGINX configuration file generated by Ansible.
# This config file sets up an HTTPS server (listening on port 443) with the provided SSL certificate
# and key, and also configures a redirect from HTTP (port 80) to HTTPS.

worker_processes  1;

events {
    worker_connections  1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    
    # HTTPS server configuration
    server {
        listen       443 ssl;
        server_name  localhost;

        ssl_certificate      conf/ssl/server.crt;
        ssl_certificate_key  conf/ssl/server.key;

        ssl_protocols       TLSv1.2 TLSv1.3;
        ssl_prefer_server_ciphers on;

        location / {
            root   html;
            index  index.html index.htm;
        }
    }

    # Redirect HTTP to HTTPS
    server {
        listen       80;
        server_name  localhost;
        return 301 https://$host$request_uri;
    }
}
